{
  "baseBranch": "main",
  "baseline": {
    "status": "green",
    "checks": [
      {
        "name": "frontend typecheck",
        "command": "npm --prefix frontend run typecheck",
        "result": "pass"
      },
      {
        "name": "backend lint",
        "command": "npm --prefix backend run lint",
        "result": "pass"
      },
      {
        "name": "backend test",
        "command": "npm --prefix backend run test -- --run",
        "result": "pass"
      },
      {
        "name": "frontend test",
        "command": "npm --prefix frontend run test -- --run",
        "result": "pass"
      }
    ],
    "notes": "postgres up via docker compose; tests run with --run to avoid watch mode"
  },
  "lanes": {
    "A": {
      "scope": [
        "backend/src/routes/"
      ]
    },
    "B": {
      "scope": [
        "frontend/src/pages/"
      ]
    },
    "C": {
      "scope": [
        "backend/src/services/"
      ]
    },
    "SOLO": {
      "scope": [
        "frontend/src/hooks/",
        "frontend/src/types/",
        "backend/src/utils/",
        "backend/src/routes/shared/"
      ]
    }
  },
  "commands": {
    "install": [
      "npm --prefix backend ci",
      "npm --prefix frontend ci"
    ],
    "lint": [
      "npm --prefix backend run lint",
      "npm --prefix frontend run lint"
    ],
    "typecheck": [
      "npm --prefix frontend run typecheck"
    ],
    "test": [
      "npm --prefix backend run test",
      "npm --prefix frontend run test",
      "npm --prefix frontend run test:e2e"
    ],
    "build": [
      "npm --prefix backend run build",
      "npm --prefix frontend run build"
    ]
  },
  "branches": {
    "lane-A": "refactor/lane-A",
    "lane-B": "refactor/lane-B",
    "lane-C": "refactor/lane-C",
    "solo": "refactor/solo",
    "integration": "refactor/integration"
  },
  "worktrees": {
    "enabled": false,
    "root": ".worktrees",
    "lane-A": ".worktrees/lane-A",
    "lane-B": ".worktrees/lane-B",
    "lane-C": ".worktrees/lane-C",
    "solo": ".worktrees/solo",
    "integration": ".worktrees/integration"
  }
}
